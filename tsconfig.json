{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__",
    "**/__mocks__",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
